<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

	<Style Selector="Label">
		<Setter Property="FontFamily" Value="/Assets/Fonts/Roboto-Regular.ttf#Roboto"/>
		<Setter Property="Foreground" Value="#181818"/>
		<Setter Property="Padding" Value="0"/>
	</Style>
	
	<Style Selector="Label.Header">
		<Setter Property="FontWeight" Value="DemiBold"/>
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Height" Value="19"/>
	</Style>
	
	<Style Selector="Label.Title">
		<Setter Property="FontSize" Value="14"/>
	</Style>

	<Style Selector="Label.Hint">
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="FontWeight" Value="Regular"/>
		<Setter Property="Height" Value="16"/>
		<Setter Property="Foreground" Value="#4C4C4C"/>
	</Style>

	<Style Selector="Label.Button">
		<Setter Property="FontSize" Value="16"/>
	</Style>
</Styles>
