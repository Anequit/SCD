<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="242"
             x:Class="SCD.Avalonia.Views.AlertView"
			 ZIndex="1">

	<Grid>
		<Rectangle Fill="Black" Opacity="80"
				   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
		<Border Background="#ECECEC"
				CornerRadius="5"
				Margin="85 26 85 26">
			<DockPanel Margin="15">
				<Path Classes="Error"
					  Margin="0 5 0 0"
					  DockPanel.Dock="Top"
					  Height="32" Width="32"/>
				
				<Label Classes="Header"
					   Margin="0 10 0 0" DockPanel.Dock="Top"
					   FontSize="24"
					   Content="{Binding Error}"
					   HorizontalAlignment="Center"/>

				<Label Classes="Hint"
					   FontSize="18"
					   Margin="0 10 0 0"
					   DockPanel.Dock="Top"
					   Content="{Binding ErrorMessage}"
					   HorizontalAlignment="Center"/>

				<Button Classes="Close"
						HorizontalAlignment="Center" VerticalAlignment="Bottom"
						DockPanel.Dock="Bottom"
						Command="{Binding CloseCommand}"/>
			</DockPanel>
		</Border>
	</Grid>
</UserControl>
